{
  "private": true,
  "name": "xo-server",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "description": "Server part of Xen Orchestra",
  "keywords": [
    "orchestra",
    "server",
    "xen",
    "xen-orchestra"
  ],
  "homepage": "https://github.com/vatesfr/xo-server/",
  "bugs": "https://github.com/vatesfr/xo-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/vatesfr/xo-server.git"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": true,
  "main": "dist/",
  "bin": {
    "xo-server": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.36",
    "app-conf": "^0.5.0",
    "base64url": "^2.0.0",
    "bind-property-descriptor": "^1.0.0",
    "bluebird": "^3.5.1",
    "cuid": "^1.3.8",
    "dataloader": "^1.3.0",
    "event-to-promise": "^0.8.0",
    "golike-defer": "^0.4.1",
    "graphql": "^0.12.3",
    "http-request-plus": "^0.5.0",
    "http-server-plus": "^0.8.0",
    "immutable": "^4.0.0-rc.4",
    "index-modules": "^0.3.0",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "mnemonist": "^0.18.0",
    "promise-toolbox": "^0.9.5",
    "proxy-agent": "^2.1.0",
    "spdy": "^3.4.7",
    "uuid": "^3.1.0",
    "zen-observable": "^0.7.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.36",
    "@babel/core": "^7.0.0-beta.36",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.36",
    "@babel/preset-env": "^7.0.0-beta.36",
    "@babel/preset-flow": "^7.0.0-beta.36",
    "babel-7-jest": "^21.3.2",
    "babel-eslint": "^8.1.2",
    "babel-plugin-dev": "^1.0.0",
    "babel-plugin-lodash": "^3.3.2",
    "commitizen": "^2.9.6",
    "cross-env": "^5.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.14.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "cz": "git-cz",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --bail --watch",
    "lint-staged-stash": "touch .git/lint-staged && git stash save --include-untracked --keep-index && true",
    "lint-staged-unstash": "git stash pop && rm -f .git/lint-staged && true",
    "posttest": "jest",
    "prebuild": "rimraf dist/ && index-modules --auto src/",
    "precommit": "lint-staged",
    "predev": "yarn run prebuild",
    "prepublishOnly": "yarn run build",
    "pretest": "eslint --ignore-path .gitignore .",
    "start": "./dist/index.js",
    "test": "flow status"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "transform": {
      "\\.jsx?$": "babel-7-jest"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "\\.spec\\.js$"
  },
  "lint-staged": {
    "*.js": [
      "lint-staged-stash",
      "eslint --fix",
      "jest --findRelatedTests",
      "lint-staged-unstash"
    ]
  }
}
